<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/forumTable"
        android:layout_width="412dp"
        android:layout_height="168dp"
        android:padding="6dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="1dp"
                android:background="@drawable/table_border"
                android:text="작성자 ID"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="1dp"
                android:background="@drawable/table_border"
                android:text="내용"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="1dp"
                android:background="@drawable/table_border"
                android:text="날짜"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tableId1"
                android:layout_margin="1dp"
                android:background="@drawable/table_border2"
                android:text="hjuhee"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tableContent1"
                android:layout_margin="1dp"
                android:background="@drawable/table_border2"
                android:text="게시물 내용"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tableDate1"
                android:layout_margin="1dp"
                android:background="@drawable/table_border2"
                android:text="2020.11.08"
                android:textAlignment="center"
                android:textSize="15dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시판"
        android:textColor="#F5A9BC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <Button
        android:id="@+id/writeBtn"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginBottom="24dp"
        android:background="#F5A9BC"
        android:text="게시물 작성"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/forumTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

</androidx.constraintlayout.widget.ConstraintLayout>