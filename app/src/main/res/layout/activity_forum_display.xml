<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forumDisplay">

    <include
        android:id="@+id/include"
        layout="@layout/test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="144dp"
        android:text="게시판"
        android:textColor="#F5A9BC"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/writeBtn"
        android:layout_width="87dp"
        android:layout_height="33dp"
        android:background="#F6CEEC"
        android:text="게시물 작성"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283" />

    <TableLayout
        android:id="@+id/forumTable"
        android:layout_width="412dp"
        android:layout_height="168dp"
        android:stretchColumns="*"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/table_border"
                android:text="작성자 ID"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="1dp" />

            <TextView
                android:background="@drawable/table_border"
                android:text="내용"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="1dp" />

            <TextView
                android:background="@drawable/table_border"
                android:text="날짜"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_margin="1dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tableId1"
                android:text="hjuhee"
                android:background="@drawable/table_border2"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_margin="1dp" />

            <TextView
                android:id="@+id/tableContent1"
                android:text="게시물 내용"
                android:background="@drawable/table_border2"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_margin="1dp" />

            <TextView
                android:id="@+id/tableDate1"
                android:text="2020.11.08"
                android:background="@drawable/table_border2"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_margin="1dp" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>